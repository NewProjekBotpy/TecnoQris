{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "framework": null,
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/test.js": {
      "maxDuration": 10,
      "memory": 128
    },
    "api/ping.js": {
      "maxDuration": 10,
      "memory": 128
    },
    "api/health.js": {
      "maxDuration": 30,
      "memory": 256
    }
  },
  "rewrites": [
    {
      "source": "/api/test",
      "destination": "/api/test"
    },
    {
      "source": "/api/ping",
      "destination": "/api/ping"
    },
    {
      "source": "/api/health",
      "destination": "/api/health"
    },
    {
      "source": "/api/:path*",
      "destination": "/api/index"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}
